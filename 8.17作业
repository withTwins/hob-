#include <stdio.h>
int x_7 = 20;
int _x7 = 22;
int X_7 = 18;
// 逻辑运算符
/*1.逻辑与
int main()
{
    
    if ((x_7 < _x7 )&&(_x7 > X_7 ))
    {
        printf("结果为真\n");
    }
    return 0;
}
*/
/*2.逻辑或


int main()
{
    if ((x_7 < _x7)|| (_x7<X_7))
    printf("true");
    return 0;
}
*/

/* 3.逻辑非
int main()
{
    if (!(x_7 > _x7))
    {
        printf("false");
    }
    return 0;
}
*/

/*进制转换

// 1. 123 转化成二进制 == 11110110 2. 345转化成二进制 101011001

int main()
{
    printf("%x\n",123);
    return 0;
}
*/
/*  例：+5 和 -5

原码；0000 0101       1000 0101
反码：0000 0101       1111 1010    正数的反码就是原码本身  负数的反码是除符号位（符号位就是每个的第一位 1表示为负，0表示为正）外其余数字 变成相反的数
补码：0000 0101       1111 1011
*/


/* 按位与&  //上下对应的数当都是 1时，则打印1，有一个0时则打印0.
int main()
{
    printf("%d\n", -5 & 10 );
    return 0;
}
*/

/* 按位或 | //上下对应的两个数只要有一个1结果就是1，只有两个0才是0.

int main()
{
    printf("%d\n", -5 | 10);
    return 0;
}
*/

/* 按位反 ~ // 1变成0 0变成1
int main()
{
    int num = 10;
    signed result = ~num;
    printf("%d\n",result);
    return 0;
}
*/
